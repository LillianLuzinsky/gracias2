<div class="title">
    <h1>journal</h1>
</div>

<div id="click-here">
    <p>to view your previous posts, <a href= '/journal/history' >click here</a></p>
</div>

<div class="row">

    <% @questions.each_with_index do |question, index| %>
        <div class="section<%=index+1%> col-lg-4 col-sm-12">
            <h4><%= question.title %></h4>
            <%= form_tag('/journal/'+question.id.to_s+'/answer', :class => 'journal' ) do %>
                <input type="text" name="user_reply"><br>
                <button class="journal-button">edit</button>
                <button type="submit" class="journal-button">save</button>
            <% end %>
        </div>
    <% end %>

</div>



<div class="row">
   <%= form_for :journal_entries, url: 'journal' do |f| %>

<p>
    <%= f.label 'for what were you grateful?'%><br>
    <%= f.text_area :text %><br>
    <%= f.submit 'add' %>
    <%= f.submit 'save' %>
</p><br>

<p>
    <%= f.label 'who made you feel grateful?'%><br>
    <%= f.text_area :text %><br>
    <%= f.submit 'add' %>
    <%= f.submit 'save' %>
</p><br>

<p>
    <%= f.label 'how did you show your appreciation?'%><br>
    <%= f.text_area :text %><br>
    <%= f.submit 'add' %>
    <%= f.submit 'save' %>
</p>
  
<% end %>
</div>




