
  <div class="title">
    <h1 id="welcome">sign up</h1>
  </div>

 <%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="signup-section col-lg-12 col-sm-12">
      <div id="click-here">
      <p>already a user?<a href="login.html">click here</a></p>
    </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.text_field :email %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation %>
        </div>

        <div class="actions"><%= f.submit "sign up" %></div>
      <% end %>

</div>